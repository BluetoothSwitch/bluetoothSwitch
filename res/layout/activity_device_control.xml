<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/loginbg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_topbar"
        style="@style/topbar_bg"
        android:layout_width="match_parent"
        android:layout_height="46.0dip" >

        <Button
            android:id="@+id/control_finish"
            style="@style/topbar_left_btn"
            android:background="@drawable/menu_unfold" />

        <TextView
            android:id="@+id/control_blueth_name"
            style="@style/topbar_text"
            android:text="HMSoft" />
        <TextView
            android:id="@+id/control_blueth_status"
            style="@style/topbar_name_text"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginRight="10dp"
            android:text="Disconnected" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_topbar"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageButton
                    android:id="@+id/ibt_control_light"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/btn_control_selector" />

                <TextView
                    android:id="@+id/switch_control"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ibt_control_light"
                    android:layout_below="@+id/ibt_control_light"
                    android:gravity="center_horizontal"
                    android:text="开关灯"
                    android:textColor="@drawable/color_control"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageButton
                    android:id="@+id/ibt_control_lamp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/btn_control_selector"  />
                <TextView
                    android:id="@+id/light_control"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ibt_control_lamp"
                    android:layout_below="@+id/ibt_control_lamp"
                    android:gravity="center_horizontal"
                    android:text="小夜灯"
                    android:textColor="@drawable/color_control"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/ibt_control_alarm"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/ibt_control_lamp"
                    android:background="@drawable/btn_control_selector"  />
                <TextView
                    android:id="@+id/alarm_control"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ibt_control_alarm"
                    android:layout_below="@+id/ibt_control_alarm"
                    android:gravity="center_horizontal"
                    android:text="报警功能"
                    android:textColor="@drawable/color_control"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>